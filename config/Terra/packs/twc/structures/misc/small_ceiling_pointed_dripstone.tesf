block(0, 0, 0, "minecraft:pointed_dripstone[vertical_direction=down, thickness=base]", false);
for (num i = 1; i <= length - 2; i = i + 1) {
    block(0, -i, 0, "minecraft:pointed_dripstone[vertical_direction=down, thickness=middle]", false);
